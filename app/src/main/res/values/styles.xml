<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#171E28</item>
        <item name="colorPrimaryDark">#090C0F</item>
        <item name="colorAccent">#475B72</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:textColor">#C3C7CC</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextHeadingSection">
        <item name="android:textColor">#C3C7CC</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextInfo">
        <item name="android:textColor">#6B7380</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>

